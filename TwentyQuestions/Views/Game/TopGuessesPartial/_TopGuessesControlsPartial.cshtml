@model IEnumerable<TwentyQuestions.Models.Entity>

<p>
	Is it one of these?
</p>


<table class="table table-striped table-hover" style="width: 600px; margin: 0 auto; text-align: left;">
	<thead>
		<tr>
			<th>#</th>
			<th style="width: 40%">@Html.DisplayNameFor(model => model.Name)</th>
			<th style="width: 50%">@Html.DisplayNameFor(model => model.Description)</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@if (Model != null)
		{
			int i = 0;
			foreach (var topGuess in Model)
			{
				<tr>
					<td>@(i + 1)</td>
					<td>@topGuess.Name</td>
					<td>@topGuess.Description</td>
					<td>
						<button type="button"
								class="btn btn-info btn-xs top_guesses_link"
								data-rank="@(i + 2)">
							select
						</button>
					</td>
				</tr>
				++i;
			}
		}
	</tbody>
</table>

<br />
<button type="button"
		class="btn btn-warning btn-sm top_guesses_link"
		data-rank="-1">
	No, none of these.
</button>
